<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardDAO">
    <insert id="insertBoard">
        insert into NEWBOARD (category, title, writer, content)
        values (#{category}, #{title}, #{writer}, #{content})
    </insert>
    <update id="updateBoard">
        update NEWBOARD
        set category=#{category},title=#{title},content=#{content} where seq=#{seq}
    </update>
    <delete id="deleteBoard">
        delete from NEWBOARD where seq=#{seq}
    </delete>
    <select id="getBoard" resultType="board">
        select * from NEWBOARD where seq=#{seq}
    </select>
    <select id="getBoardList" resultType="board">
        select * from NEWBOARD order by seq desc
    </select>
</mapper>